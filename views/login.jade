//- http://twitter.github.com/bootstrap/base-css.html#forms
//- https://github.com/visionmedia/jade
extends layout

block content

  div.container
    div.row
      div.span5.offset2

        //- set focus for the user headjs version
        script 
          head.ready(function() {
             $("#inputUserName").focus();
          });
        //- set focus for the user regular version
          script $(document).ready(function () { $("#inputUserName").focus(); })
        
        //- Login form
        br 
        br 
        form.form-horizontal(action='/login', method='post')
          fieldset
            legend Sign in!
            //- div.control-group
              label.control-label(for='inputEmail') Email
              div.controls
                input#inputEmail.input-large(name='email', type='email', placeholder='you@youremail.com', required)
            div.control-group
                label.control-label(for='inputUserName') Your Name
                div.controls
                  input#inputUserName.input-large(name='username', type='text', placeholder='Username', required)
            div.control-group
              label.control-label(for='inputPassword') Password
              div.controls
                input#inputPassword.input-large(name='password', type='password', placeholder='passw0rd', required)
            div.control-group
              div.controls
                button.btn(type='submit') Sign In

        //- Flash Message
        if (message != '')
          div.alert.alert-error
            p !{message}
        br
        br
        p.small
          em Hint: try "Dan" and "passw0rd"
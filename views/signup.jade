//- http://twitter.github.com/bootstrap/base-css.html#forms
//- https://github.com/visionmedia/jade
extends layout

block content
  
  div.container
    //- 
      div.row
        div.span12
          div.well
            div.social_buttons
              div.inset
                a.fb.login_button(href="/facebook/?next=%2F")
                  div.logo_wrapper
                    span.logo
                      span Login with Facebook
              div.inset
                a.tw.login_button(href="/twitter/?next=%2F")
                  div.logo_wrapper
                    span.logo
                      span Login with Twitter

    div.row
      div.span4.offset2

        //- Flash Message
        if message
          br 
          br 
          p #{message}

        //- set focus for the user
        script $(document).ready(function () { $("#inputUserName").focus(); })

        //- Signup Form
        form.form-horizontal(action='/register', method='post')
          fieldset
            Legend Sign up!
            div.control-group
                label.control-label(for='inputUserName') Your Name
                div.controls
                  input#inputUserName(name='username', type='text', placeholder='Username')
              div.control-group
                label.control-label(for='inputEmail') Email
                div.controls
                  input#inputEmail(name='email', type='email', placeholder='you@youremail.com', required)
              div.control-group
                label.control-label(for='inputPassword') Password
                div.controls
                  input#inputPassword(name='password', type='password', placeholder='Passw0rd')
              div.control-group
                div.controls
                  button.btn(type='submit') Sign Up
        
        div#signup-error.hide alert.alert-error
        p Already have an account? 
          a(href="/login") Sign In
      //Add additional script to validate the email address
        script(type="text/javascript", src="../js/lib/jquery.mailcheck.min.js")

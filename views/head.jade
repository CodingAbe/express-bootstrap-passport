  script
    head.load(
    
    '/css/bootstrap.min.css', 
    '/css/responsive.min.css', 
    '/css/docs.css'

    );



  // dependecies (execute in order listed
  script
    head.js(

    "//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js",  
    "/js/bootstrap.js"

    );
